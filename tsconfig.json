{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}